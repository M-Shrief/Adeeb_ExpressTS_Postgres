{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@poet/*": ["./components/poet/*"],
      "@poem/*": ["components/poem/*"],
      "@chosenVerse/*": ["components/chosenVerse/*"],
      "@prose/*": ["components/prose/*"],
      "@partner/*": ["components/partner/*"],
      "@order/*": ["components/order/*"]
    }
  }
}
